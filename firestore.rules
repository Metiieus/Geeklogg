rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ‘¤ Perfis pÃºblicos: qualquer usuÃ¡rio autenticado pode visualizar, mas sÃ³ o dono pode editar
    match /users/{userId} {
      allow list, get: if request.auth != null; // pode buscar e ver perfis de outros
      allow update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // ğŸ“ SubcoleÃ§Ãµes privadas do usuÃ¡rio (medias, reviews, milestones, achievements, etc)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // ğŸ“ Atividades globais (feed pÃºblico)
    match /activities/{docId} {
      allow read: if request.auth != null;              // qualquer logado pode ver
      allow create: if request.auth != null;            // qualquer logado pode registrar
      allow update, delete: if false;                   // ninguÃ©m pode editar/deletar
    }

    // ğŸ”” NotificaÃ§Ãµes globais (tipo anÃºncios)
    match /notifications/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // apenas via servidor/admin
    }

    // ğŸ“¨ SolicitaÃ§Ãµes de amizade / seguir
    match /followRequests/{docId} {
      allow read, write: if request.auth != null;
    }

    // ğŸ“ Seguidores e seguindo (em subcoleÃ§Ãµes de cada usuÃ¡rio)
    match /users/{userId}/followers/{docId} {
      allow read, write: if request.auth.uid == userId; // sÃ³ o dono pode gerenciar seguidores
    }

    match /users/{userId}/following/{docId} {
      allow read, write: if request.auth.uid == userId; // sÃ³ o dono pode seguir/desseguir
    }

    // ğŸ“ NotificaÃ§Ãµes pessoais
    match /users/{userId}/notifications/{docId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
